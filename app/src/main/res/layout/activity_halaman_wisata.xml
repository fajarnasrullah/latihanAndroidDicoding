<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HalamanWisata">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageDesti"
            android:layout_width="372dp"
            android:layout_height="242dp"
            android:layout_marginTop="30dp"

            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@drawable/sindoro" />


        <TextView
            android:id="@+id/judulDesti"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:text="@string/destinasi_name"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/imageDesti"
            app:layout_constraintTop_toBottomOf="@+id/imageDesti" />

        <TextView
            android:id="@+id/deskripsiDesti"
            android:layout_width="371dp"
            android:layout_height="308dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageDesti"
            app:layout_constraintStart_toStartOf="@+id/imageDesti"
            app:layout_constraintTop_toBottomOf="@+id/judulDesti" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
