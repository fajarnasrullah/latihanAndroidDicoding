<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanWisata">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imageDesti"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"


            tools:src="@drawable/sindoro" />

        <TextView
            android:id="@+id/judulDesti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/destinasi_name"
            android:textColor="@color/biruTua"
            android:textSize="25sp"
            android:textStyle="bold"


            app:layout_constraintTop_toBottomOf="@+id/imageDesti" />

        <TextView
            android:id="@+id/deskripsiDesti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </LinearLayout>
</ScrollView>
